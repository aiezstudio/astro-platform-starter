---
const Icon = ({ link, label, svg }) => {
  return (
    <a href={link} title={label} style="display: flex; flex-direction: column; align-items: center; text-decoration: none; color: inherit;"> 
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#4F46E5" style="width: 24px; height: 24px;">
        <path stroke-linecap="round" stroke-linejoin="round" d={svg} />
      </svg>
      <span style="font-size: 0.7rem; margin-top: 0.25rem;">{label}</span>
    </a>
  );
};
